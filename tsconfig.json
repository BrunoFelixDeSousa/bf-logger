{
  "compilerOptions": {
    "declaration": true, // Gera arquivos .d.ts
    "declarationMap": true, // (Opcional) Gera arquivos .d.ts.map para depuração
    "emitDeclarationOnly": false, // Gera tipos junto com o código
    "outDir": "./dist", // Diretório de saída
    "moduleResolution": "node",
    "module": "ESNext", // Ou CommonJS, dependendo do seu ambiente
    "target": "ESNext",
    "strict": true, // (Opcional) Ativa verificações rigorosas
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
