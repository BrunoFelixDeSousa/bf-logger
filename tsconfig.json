{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist/types",  // Ou qualquer diretório onde deseja gerar as declarações
    "outDir": "./dist",
    "target": "ESNext",  // Ou o target que você está utilizando
    "moduleResolution": "node",  // Para resolução de módulos tipo Node
    "strict": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ]
}
